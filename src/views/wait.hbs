<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Waiting Area</title>
    <link rel="stylesheet" href="/stylesheets/game.css">
</head>
<body>
  <div class="container">
    <div class="other-players" id="other-players">

    </div>

    <div class="chat-container" id="chat-container">

    </div>    

    <div class="user-profile" id="current-player">
    
    </div>    

    <div id="gameArea">
          <!-- This is where the templates defined below will be used -->
    </div>    
  </div>

  <!-- Main Title Screen that appears when the page loads for the first time -->
  <script id="other-players-template" type="text/template">

      <div class="titleWrapper">
        <p> timer</p>
        <div class="player-card">
          <div class="current-profile-pic">
            <img src="/img/profile_pic.png" alt="current-profile-pic">
          </div>
          <div class="current-profile-information">
            <p>
              n a m e  : <p id="player-1"> </p><br>
              s c o r e  : <br>
              a c t i o n : <br>
            </p>
          </div>           
        </div>
        <div class="player-card">
          <div class="current-profile-pic">
            <img src="/img/profile_pic.png" alt="current-profile-pic">
          </div>
          <div class="current-profile-information">
            <p>
              n a m e  : <p id="player-2"> </p><br>
              s c o r e  : <br>
              a c t i o n : <br>
            </p>
          </div>           
        </div>
      </div>

  </script>

  <script id="current-player-template" type="text/template">
    <div class="current-profile-pic">
      <img src="/img/profile_pic.png" alt="current-profile-pic">
    </div>
    <div class="current-profile-information">
      <p>
        n a m e  : <p id="player-0">{{username}}</p><br>
        s c o r e  : <br>
        a c t i o n : <br>
      </p>
    </div>
    <div class="answer-btns-container">
      <form action="/player_actions" class="current-player-ans" method="POST">
        <button class="ans-btn" name="button" value=""> a</button> 
        <button class="ans-btn" name="button" value=""> b</button> 
        <button class="ans-btn" name="button" value=""> c</button> 
        <button class="ans-btn" name="button" value=""> d</button> 
      </form>
    </div>
    <div class="player-btns-container">
      <form action="/player_actions" class="current-player-actions" method="POST">
        <button class="action-btn" name="button" value="" id="spin-button"> s p i n</button> <br> <br>
        <button class="action-btn" name="button" value=""> b u z z  i n</button> <br> <br>
        <button class="action-btn" name="button" value="back"> b a c k</button> <br> <br>
        <button class="action-btn" name="button" value="logout"> l o g  o u t</button>
      </form>
    </div>   
  </script>

  <script id="chat-template" type="text/template">
    <div class="message-container">
      <ul id="messages"></ul>
    </div>
    <form id="chat-form" class="chat-form">
      <div class="form-group">
        <input id="chat-input" autocomplete="off" placeholder=""/><button type="button" id="chat-send"> s e n d </button>
      </div>
    </form>
  </script>

  <!-- jQuery! -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <!-- If Socket.IO is used with Express, then the /socket.io/ path will
  serve the proper Socket.IO javascript files used by the browser -->
  <script src="/socket.io/socket.io.js"></script>
  <!-- app.js is where all the client-side Anagrammatix game logic -->
  <script src="client-render.js"></script>
</body>
</html>